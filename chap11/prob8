#include <stdio.h>
#include <stdlib.h>
#include <setjmp.h>
#include <signal.h>
#include <unistd.h>   // sleep() 사용을 위해 필요

void p1();
void intHandler();
jmp_buf env;

int main()
{
    signal(SIGINT, intHandler);

    if (setjmp(env) != 0) {
        printf("Return due to interrupt\n");  // 인터럽트 발생 후 복귀
        exit(0);
    }
    else {
        printf("First pass\n");
    }

    p1();
}

void p1()
{
    while (1) {
        printf("Loop\n");
        sleep(1);
    }
}

void intHandler()
{
    printf("Interrupt\n");
    longjmp(env, 1);
}
